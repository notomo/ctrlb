{
  "private": true,
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "del": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "gulp": "^4.0.0",
    "gulp-json-editor": "^2.4.2",
    "gulp-plumber": "^1.2.0",
    "jest": "^22.4.4",
    "prettier-eslint": "^8.8.2",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.4.2",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.9.2",
    "vinyl-named": "^1.1.0",
    "web-ext": "^2.8.0",
    "webextension-polyfill-ts": "^0.8.7",
    "webpack": "^4.16.0",
    "webpack-cli": "^2.1.5",
    "webpack-stream": "^4.0.3"
  },
  "dependencies": {},
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "build": "gulp build:chrome",
    "lint:manifest": "web-ext lint --source-dir=dist",
    "ext:build:firefox": "gulp build && web-ext build --source-dir=dist --artifacts-dir=ext/firefox -o",
    "ext:build:chrome": "gulp build:chrome && web-ext build --source-dir=dist --artifacts-dir=ext/chrome -o",
    "ext": "npm run ext:build:chrome && npm run ext:build:firefox",
    "watch": "gulp watch"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/src/**/*\\.test\\.ts"
    ],
    "verbose": true,
    "collectCoverageFrom": [
      "**/src/scripts/**/*.ts"
    ],
    "coverageDirectory": "./coverage/"
  }
}
