{
  "private": true,
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "copy-webpack-plugin": "^4.5.2",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "hard-source-webpack-plugin": "^0.12.0",
    "jest": "^22.4.4",
    "prettier-eslint": "^8.8.2",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.4.2",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.9.2",
    "web-ext": "^2.8.0",
    "webextension-polyfill-ts": "^0.8.7",
    "webpack": "^4.16.0",
    "webpack-cli": "^2.1.5"
  },
  "dependencies": {},
  "scripts": {
    "test": "jest --coverage",
    "build": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "lint:manifest": "web-ext lint --source-dir=dist",
    "ext:build:firefox": "npm run build:prod --env.FIREFOX && web-ext build --source-dir=dist --artifacts-dir=ext/firefox -o",
    "ext:build:chrome": "npm run build:prod && web-ext build --source-dir=dist --artifacts-dir=ext/chrome -o",
    "ext": "npm run ext:build:chrome && npm run ext:build:firefox",
    "watch": "webpack -w --mode development",
    "format": "prettier --write 'src/scripts/**/*.ts'",
    "lint:ts": "tslint 'src/scripts/**/*.ts'",
    "lint": "npm run lint:ts && npm run lint:manifest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/src/**/*\\.test\\.ts"
    ],
    "verbose": true,
    "collectCoverageFrom": [
      "**/src/scripts/**/*.ts"
    ],
    "coverageDirectory": "./coverage/"
  }
}
